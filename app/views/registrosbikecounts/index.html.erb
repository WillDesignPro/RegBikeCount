  <thead>
    <tr>
      <th>Dia</th>
      <th>Hora</th>
      <th>Velocidade (Km/h)</th>
      <th>Tipo</th>
      <th>Peso (Aproximado)</th>
    </tr>
  </thead>

  <tbody>
  <br/>
    <a name="tabela"></a>
    <% @registrosbikecounts.each do |registrosbikecount| %>
      <tr>
        <td><%= registrosbikecount.dia %></td>
        <td><%= registrosbikecount.hora %></td>
        <td><%= registrosbikecount.velocidade%></td>

        <% if registrosbikecount.tipo == 0 %>
            <td>
              <div class="chip">
                <img src="/assets/pedestre.png">
              </div>
            </td> 
         <% else %>
           <td>
              <div class="chip">
                <img src="/assets/ciclista.png">
              </div>
            </td> 
         <%end%>
        <td><%= registrosbikecount.pressao %></td>
        <!--
        #<td><%= link_to 'Show', registrosbikecount %></td>
        #<td><%= link_to 'Edit', edit_registrosbikecount_path(registrosbikecount) %></td> -->
        <td><%= link_to 'Destroy', registrosbikecount, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>    
</table>

